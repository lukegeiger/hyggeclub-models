{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@hyggeclub/models/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "declaration": true // This line is added to generate declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
